{% extends 'base.html.twig' %}
{% block title %}Login - {{ blogCustomization.header }} {% endblock %}
{% block body %}
    <div class="d-flex flex-column justify-content-center" id="login-box">
        <div class="login-box-header">
            <h4>Login</h4>
        </div>
        <form id="login" method="post" action="/login">
            <div class="email-login">
                <input type="email" name="email" class="email-input form-control" required="" placeholder="Email" minlength="6">
                <input type="password" name="password" class="password-input form-control" required="" placeholder="Password" minlength="6"></div>
            <div class="submit-row">
                <button class="btn btn-primary d-block box-shadow w-100" id="submit-id-submit" type="submit">Login</button>
            </div>
        </form>
        <div id="login-box-footer">
            <p style="margin-bottom:0;">Don't have an account yet?<a id="register-link" href="/signup">Sign Up</a></p>
        </div>
    </div>
{% endblock %}